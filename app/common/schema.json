{
  "properties": {
    "activeProfileId": {
      "type": "integer"
    },
    "version": {
      "type": "string"
    },
    "profiles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string",
            "default": "New Profile"
          },
          "fontFamily": {
            "type": "string",
            "default": "courier-new, courier, monospace",
            "scope": "xterm",
            "settings": {
              "title": "font"
            }
          },
          "fontSize": {
            "type": "integer",
            "default": 15,
            "scope": "xterm",
            "settings": {
              "title": "font"
            }
          },
          "fontWeight": {
            "type": "string",
            "default": "normal",
            "scope": "xterm",
            "settings": {
              "title": "font"
            },
            "enum": ["normal", "bold", "bolder", "lighter", "100", "200", "300", "400", "500", "600", "700", "800", "900"]
          },
          "cursorStyle": {
            "type": "string",
            "scope": "xterm",
            "enum": ["block", "underline", "bar"],
            "title": "Choose a cursor style",
            "default": "block",
            "settings": {
              "title": "cursor"
            }
          },
          "cursorBlink": {
            "type": "boolean",
            "title": "Blink cursor",
            "default": true,
            "scope": "xterm",
            "settings": {
              "title": "cursor"
            }
          },
          "shell": {
            "type": "string",
            "title": "Shell to run (i.e. /usr/local/bin/fish)",
            "settings": {
              "title": "shell"
            }
          },
          "shellArgs": {
            "type": "string",
            "title": "Shell Arguments (comma separated)",
            "default": "",
            "settings": {
              "title": "shell"
            }
          },
          "scrollback": {
            "type": "integer",
            "default": 4000,
            "scope": "xterm",
            "settings": {
              "title": "shell"
            }
          },
          "padding": {
            "type": "string",
            "default": "5px 0 10px 15px",
            "settings": {
              "title": "shell"
            }
          },
          "copyOnSelect": {
            "type": "boolean",
            "default": true,
            "settings": {
              "title": "shell"
            }
          },
          "macOptionIsMeta": {
            "type": "boolean",
            "default": true,
            "scope": "xterm",
            "settings": {
              "title": "shell"
            }
          },
          "rightClickSelectsWord": {
            "type": "boolean",
            "default": true,
            "scope": "xterm",
            "settings": {
              "title": "shell"
            }
          },
          "macOptionClickForcesSelection": {
            "title": "Mac - Click forces selection",
            "type": "boolean",
            "default": true,
            "scope": "xterm",
            "settings": {
              "title": "shell"
            }
          },
          "vibrancy": {
            "type": "string",
            "default": null,
            "settings": {
              "title": "theme"
            },
            "enum": ["", "light", "medium-light", "dark", "ultra-dark"]
          },
          "experimentalWebglRenderer": {
            "type": "boolean",
            "default": false,
            "settings": {
              "title": "modes"
            }
          },
          "ligatures": {
            "type": "boolean",
            "default": false,
            "settings": {
              "title": "modes"
            }
          },
          "theme": {
            "type": "object",
            "scope": "xterm",
            "settings": {"title": "theme"},
            "properties": {
              "selection": {
                "type": "string",
                "color": true,
                "default": "rgba(151, 151, 155, 0.2)",
                "settings": {
                  "title": "theme"
                }
              },
              "foreground": {
                "type": "string",
                "color": true,
                "default": "#eff0eb",
                "settings": {
                  "title": "theme"
                }
              },
              "background": {
                "type": "string",
                "color": true,
                "default": "#282a36",
                "settings": {
                  "title": "theme"
                }
              },
              "black": {
                "type": "string",
                "color": true,
                "default": "#282a36",
                "settings": {
                  "title": "theme"
                }
              },
              "red": {
                "type": "string",
                "color": true,
                "default": "#ff5c57",
                "settings": {
                  "title": "theme"
                }
              },
              "brightRed": {
                "type": "string",
                "color": true,
                "default": "#ff5c57",
                "settings": {
                  "title": "theme"
                }
              },
              "green": {
                "type": "string",
                "color": true,
                "default": "#5af78e",
                "settings": {
                  "title": "theme"
                }
              },
              "brightGreen": {
                "type": "string",
                "color": true,
                "default": "#5af78e",
                "settings": {
                  "title": "theme"
                }
              },
              "yellow": {
                "type": "string",
                "color": true,
                "default": "#f3f99d",
                "settings": {
                  "title": "theme"
                }
              },
              "brightYellow": {
                "type": "string",
                "color": true,
                "default": "#f3f99d",
                "settings": {
                  "title": "theme"
                }
              },
              "magenta": {
                "type": "string",
                "color": true,
                "default": "#ff6ac1",
                "settings": {
                  "title": "theme"
                }
              },
              "brightMagenta": {
                "type": "string",
                "color": true,
                "default": "#ff6ac1",
                "settings": {
                  "title": "theme"
                }
              },
              "cyan": {
                "type": "string",
                "color": true,
                "default": "#9aedfe",
                "settings": {
                  "title": "theme"
                }
              },
              "brightCyan": {
                "type": "string",
                "color": true,
                "default": "#9aedfe",
                "settings": {
                  "title": "theme"
                }
              },
              "blue": {
                "type": "string",
                "color": true,
                "default": "#57c7ff",
                "settings": {
                  "title": "theme"
                }
              },
              "brightBlue": {
                "type": "string",
                "color": true,
                "default": "#57c7ff",
                "settings": {
                  "title": "theme"
                }
              },
              "white": {
                "type": "string",
                "color": true,
                "default": "#f1f1f0",
                "settings": {
                  "title": "theme"
                }
              },
              "brightWhite": {
                "type": "string",
                "color": true,
                "default": "#eff0eb",
                "settings": {
                  "title": "theme"
                }
              },
              "brightBlack": {
                "type": "string",
                "color": true,
                "default": "#686868",
                "settings": {
                  "title": "theme"
                }
              },
              "cursorAccent": {
                "type": "string",
                "color": true,
                "default": "#282a36",
                "settings": {
                  "title": "theme"
                }
              },
              "cursor": {
                "type": "string",
                "color": true,
                "default": "#97979b",
                "settings": {
                  "title": "theme"
                }
              }
            }
          },
          "keybindings": {
            "type": "array",
            "settings": {
              "title": "keybindings"
            },
            "platformSpecific": true,
            "items": {
              "type": "object",
              "properties": {
                "keystroke": {
                  "type": "string",
                  "keybinding": true
                },
                "command": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
