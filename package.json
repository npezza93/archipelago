{
  "name": "Archipelago",
  "version": "4.0.0",
  "description": "Archipelago is an open-source terminal emulator built on web technology",
  "main": "app/main/esm.js",
  "scripts": {
    "postinstall": " ./node_modules/.bin/electron-builder install-app-deps",
    "test": "yarn compile && ./node_modules/.bin/mocha test/main/about-test.js test/main/main-test.js test/main/settings-test.js",
    "start": "./node_modules/.bin/electron .",
    "lint": "./node_modules/.bin/xo --ignore app/renderer/index.js",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "dist": "yarn compile &&  ./node_modules/.bin/electron-builder --publish onTagOrDraft"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "plugins": [
      "react"
    ],
    "extends": [
      "plugin:react/recommended"
    ],
    "rules": {
      "prefer-const": 0,
      "unicorn/import-style": 0,
      "react/prop-types": 0,
      "unicorn/prefer-ternary": 0,
      "guard-for-in": 0,
      "import/no-unassigned-import": 0,
      "import/extensions": 0,
      "unicorn/no-fn-reference-in-iterator": 0,
      "no-setter-return": 0,
      "import/no-anonymous-default-export": 0,
      "unicorn/no-reduce": 0,
      "node/no-path-concat": 0,
      "node/file-extension-in-import": 0,
      "unicorn/no-array-for-each": 0,
      "unicorn/no-array-callback-reference": 0,
      "unicorn/no-array-reduce": 0,
      "unicorn/explicit-length-check": 0,
      "unicorn/prefer-module": 0,
      "unicorn/prefer-node-protocol": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npezza93/archipelago.git"
  },
  "keywords": [
    "archipelago",
    "terminal",
    "xterm",
    "electron",
    "terminal-emulators",
    "react",
    "javascript",
    "html",
    "css"
  ],
  "author": {
    "name": "Nick Pezza",
    "email": "npezza93@gmail.com"
  },
  "homepage": "https://github.com/npezza93/archipelago",
  "bugs": {
    "url": "https://github.com/npezza93/archipelago/issues"
  },
  "license": "MIT",
  "dependencies": {
    "auto-bind": "^4.0.0",
    "color": "^3.1.0",
    "debounce-fn": "< 5.0",
    "electron-better-ipc": "^2.0.0",
    "electron-context-menu": "^3.1.0",
    "electron-util": "^0.16.0",
    "esm": "^3.2.25",
    "event-kit": "^2.5.0",
    "font-list": "^1.3.0",
    "keystroke-for-keyboard-event": "^1.0.0",
    "node-pty": "0.10.1",
    "pref": "^3.1.0",
    "stimulus": "^2.0.0",
    "unescape-js": "^1.1.0",
    "update-electron-app": "^2.0.1",
    "xterm": "^4.13.0",
    "xterm-addon-fit": "^0.5.0",
    "xterm-addon-ligatures": "^0.5.0",
    "xterm-addon-web-links": "^0.4.0",
    "xterm-addon-webgl": "^0.11.1"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "electron": "^13.1.5",
    "electron-builder": "^22.11.5",
    "electron-mocha": "^10.0.0",
    "electron-notarize": "^1.0.0",
    "mocha": "^8.4.0",
    "spectron": "^15.0.0",
    "xo": "^0.40.2"
  },
  "build": {
    "productName": "Archipelago",
    "appId": "dev.archipelago",
    "afterSign": "./after-sign-hook.js",
    "files": [
      "**/*",
      "!node_modules"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 130,
      "contents": [
        {
          "x": 110,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
