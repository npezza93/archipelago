{
  "name": "Archipelago",
  "version": "4.0.0",
  "description": "Archipelago is an open-source terminal emulator built on web technology",
  "main": "app/main/esm.js",
  "scripts": {
    "postinstall": " ./node_modules/.bin/electron-builder install-app-deps",
    "test": "./node_modules/.bin/mocha test/main/about-test.js test/main/main-test.js test/main/settings-test.js",
    "start": "./node_modules/.bin/electron .",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "dist": "./node_modules/.bin/electron-builder --publish onTagOrDraft"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npezza93/archipelago.git"
  },
  "keywords": [
    "archipelago",
    "terminal",
    "xterm",
    "electron",
    "terminal-emulators",
    "javascript",
    "html",
    "css"
  ],
  "author": {
    "name": "Nick Pezza",
    "email": "pezza@hey.com"
  },
  "homepage": "https://github.com/npezza93/archipelago",
  "bugs": {
    "url": "https://github.com/npezza93/archipelago/issues"
  },
  "license": "MIT",
  "dependencies": {
    "color": "^4.0.1",
    "debounce-fn": "< 5.0",
    "electron-better-ipc": "^2.0.0",
    "electron-context-menu": "^3.1.0",
    "electron-util": "^0.17.0",
    "esm": "^3.2.25",
    "event-kit": "^2.5.0",
    "font-list": "^1.3.0",
    "keystroke-for-keyboard-event": "^1.0.0",
    "node-pty": "0.10.1",
    "pref": "^3.1.0",
    "stimulus": "^2.0.0",
    "unescape-js": "^1.1.0",
    "update-electron-app": "^2.0.1",
    "xterm": "^4.14.0-beta.21",
    "xterm-addon-fit": "^0.6.0-beta.2",
    "xterm-addon-ligatures": "^0.5.0-beta.1",
    "xterm-addon-web-links": "^0.5.0-beta.6",
    "xterm-addon-webgl": "^0.12.0-beta.10"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "electron": "^13.2.1",
    "electron-builder": "^22.11.5",
    "electron-mocha": "^10.0.0",
    "electron-notarize": "^1.0.0",
    "mocha": "^9.0.3",
    "spectron": "^15.0.0"
  },
  "build": {
    "productName": "Archipelago",
    "appId": "dev.archipelago",
    "afterSign": "./after-sign-hook.js",
    "mac": {
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      },
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "./build/entitlements.mac.inherit.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 130,
      "contents": [
        {
          "x": 110,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
