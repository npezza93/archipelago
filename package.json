{
  "name": "Archipelago",
  "version": "3.9.0",
  "description": "Archipelago is an open-source terminal emulator built on web technology",
  "main": "app/main/index.js",
  "scripts": {
    "postinstall": " ./node_modules/.bin/electron-builder install-app-deps",
    "test": "yarn compile && ./node_modules/.bin/mocha test/main/",
    "start": "./node_modules/.bin/electron-webpack dev",
    "compile": "./node_modules/.bin/electron-webpack",
    "lint": "./node_modules/.bin/xo --ignore app/renderer/index.js",
    "pack": "./node_modules/.bin/electron-builder --dir",
    "dist": "yarn compile &&  ./node_modules/.bin/electron-builder --publish onTagOrDraft"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "plugins": [
      "react"
    ],
    "extends": [
      "plugin:react/recommended"
    ],
    "rules": {
      "react/prop-types": 0,
      "guard-for-in": 0,
      "import/no-unassigned-import": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npezza93/archipelago.git"
  },
  "keywords": [
    "archipelago",
    "terminal",
    "xterm",
    "electron",
    "terminal-emulators",
    "react",
    "javascript",
    "html",
    "css"
  ],
  "author": {
    "name": "Nick Pezza",
    "email": "npezza93@gmail.com"
  },
  "homepage": "https://github.com/npezza93/archipelago",
  "bugs": {
    "url": "https://github.com/npezza93/archipelago/issues"
  },
  "license": "MIT",
  "resolutions": {
    "js-yaml": "3.13.1",
    "serialize-javascript": "2.1.2"
  },
  "dependencies": {
    "@githubprimer/octicons-react": "^8.1.0",
    "@researchgate/react-intersection-observer": "^1.0.5",
    "auto-bind": "^3.0.0",
    "color": "^3.1.0",
    "debounce-fn": "^3.0.0",
    "default-shell": "^1.0.1",
    "electron-better-ipc": "^0.8.0",
    "electron-context-menu": "^0.16.0",
    "electron-util": "^0.13.1",
    "event-kit": "^2.5.0",
    "i": "^0.3.6",
    "keystroke-for-keyboard-event": "^1.0.0",
    "node-pty": "^0.9.0",
    "pref": "^3.1.0",
    "react": "^16.10.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-color": "^2.18.0",
    "react-dom": "^16.10.2",
    "react-split-pane": "^0.1.81",
    "source-map-support": "^0.5.16",
    "unescape-js": "^1.1.0",
    "update-electron-app": "^1.3.0",
    "xterm": "^4.4.0-beta.5",
    "xterm-addon-fit": "^0.4.0-beta2",
    "xterm-addon-search": "^0.4.0",
    "xterm-addon-web-links": "0.3.0-beta6",
    "xterm-addon-webgl": "^0.4.0"
  },
  "devDependencies": {
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-react": "^7.8.3",
    "chai": "^4.1.2",
    "css-loader": "^3.4.2",
    "electron": "^7.1.8",
    "electron-builder": "^22.2.0",
    "electron-mocha": "^8.2.0",
    "electron-webpack": "^2.3.1",
    "eslint-plugin-react": "^7.17.0",
    "mocha": "^6.2.2",
    "robotjs": "^0.6.0",
    "spectron": "^9.0.0",
    "webpack": "^4.41.5",
    "xo": "^0.25.3"
  },
  "build": {
    "productName": "Archipelago",
    "mac": {
      "category": "public.app-category.developer-tools",
      "extendInfo": {
        "NSRequiresAquaSystemAppearance": false
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 130,
      "contents": [
        {
          "x": 110,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "build/icon.icns",
      "category": "TerminalEmulator",
      "packageCategory": "TerminalEmulator",
      "description": "Archipelago is a terminal emulator built on open web technologies.",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "maintainer": "Nick Pezza <npezza93@gmail.com>"
    },
    "deb": {
      "synopsis": "Archipelago"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publisherName": "Nick Pezza"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "electronWebpack": {
    "commonSourceDirectory": "app/common",
    "title": true,
    "main": {
      "sourceDirectory": "app/main"
    },
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js",
      "sourceDirectory": "app/renderer"
    }
  }
}
