{
  "name": "Archipelago",
  "version": "0.1.0",
  "description": "Archipelago is a terminal emulator built on open web technologies.",
  "main": "app/main/init.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish onTagOrDraft",
    "fix:js": "eslint app/**/*.js --fix",
    "fix:css": "stylefmt app/**/*.scss",
    "fix": "npm-run-all fix:*",
    "lint:js": "eslint app/**/*.js",
    "lint:css": "stylelint app/**/*.css",
    "lint:markdown": "remark README.md",
    "lint": "npm-run-all lint:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npezza93/archipelago.git"
  },
  "keywords": [
    "terminal",
    "xterm",
    "archipelago",
    "electron app"
  ],
  "author": {
    "name": "Nick Pezza",
    "email": "npezza93@gmail.com"
  },
  "contributors": [
    {
      "name": "Nick Pezza",
      "email": "npezza93@gmail.com"
    },
    {
      "name": "Christopher Pezza",
      "email": "pezza.chris@gmail.com",
      "url": "http://www.chris-pezza.com"
    }
  ],
  "homepage": "https://github.com/npezza93/archipelago",
  "bugs": {
    "url": "https://github.com/npezza93/archipelago/issues"
  },
  "license": "MIT",
  "dependencies": {
    "chokidar": "^1.7.0",
    "coffeescript": "^2.1.0",
    "default-shell": "^1.0.1",
    "is-hotkey": "^0.1.1",
    "material-components-web": "^0.27.0",
    "nested-property": "0.0.7",
    "node-pty": "^0.7.4",
    "react": "^16.2.0",
    "react-color": "^2.13.8",
    "react-dom": "^16.2.0",
    "react-split-pane": "^0.1.74",
    "react-waypoint": "^7.3.4",
    "rmwc": "0.0.1-rc12"
  },
  "devDependencies": {
    "babel-eslint": "^8.1.2",
    "electron": "^1.8.1",
    "electron-builder": "^19.49.2",
    "eslint": "^4.14.0",
    "eslint-plugin-coffeescript": "^0.2.1",
    "npm-run-all": "^4.1.2",
    "remark-cli": "^4.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "stylefmt": "^6.0.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-order": "^0.8.0"
  },
  "build": {
    "productName": "Archipelago",
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "category": "TerminalEmulator",
      "packageCategory": "TerminalEmulator",
      "description": "Archipelago is a terminal emulator built on open web technologies.",
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Nick Pezza <npezza93@gmail.com>"
    },
    "deb": {
      "synopsis": "Archipelago"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publisherName": "Nick Pezza"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
