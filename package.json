{
  "name": "Archipelago",
  "version": "3.0.0",
  "description": "Archipelago is an open-source terminal emulator built on web technology",
  "main": "app/main/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "ELECTRON_DISABLE_SECURITY_WARNINGS=true ./node_modules/.bin/electron .",
    "test": "./node_modules/.bin/mocha test/about test/main test/settings && ./node_modules/.bin/electron-mocha test/common --renderer && ./node_modules/.bin/electron-mocha --require test/setup.js --recursive test/react --renderer",
    "lint": "./node_modules/.bin/xo --ignore app/common/keymapper.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish onTagOrDraft",
    "dev": "./node_modules/.bin/electron-webpack dev"
  },
  "xo": {
    "space": true,
    "semicolon": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/npezza93/archipelago.git"
  },
  "keywords": [
    "archipelago",
    "terminal",
    "xterm",
    "electron",
    "terminal-emulators",
    "react",
    "javascript",
    "html",
    "css"
  ],
  "author": {
    "name": "Nick Pezza",
    "email": "npezza93@gmail.com"
  },
  "homepage": "https://github.com/npezza93/archipelago",
  "bugs": {
    "url": "https://github.com/npezza93/archipelago/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@researchgate/react-intersection-observer": "^0.7.3",
    "color": "^3.0.0",
    "electron-better-ipc": "^0.1.1",
    "electron-util": "^0.9.1",
    "event-kit": "^2.5.0",
    "i": "^0.3.6",
    "keystroke-for-keyboard-event": "^1.0.0",
    "node-pty": "^0.7.6",
    "pref": "^3.1.0",
    "react": "^16.4.1",
    "react-color": "^2.14.1",
    "react-dom": "^16.4.1",
    "react-split-pane": "^0.1.81",
    "source-map-support": "^0.5.9",
    "unescape-js": "^1.1.0",
    "update-electron-app": "^1.3.0",
    "xterm": "^3.5.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.0.0",
    "chai": "^4.1.2",
    "css-loader": "^1.0.0",
    "electron": "^3.0.2",
    "electron-builder": "^20.19.1",
    "electron-mocha": "^6.0.4",
    "electron-webpack": "^2.3.1",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "jsdom": "^12.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "raf": "^3.4.0",
    "spectron": "^4.0.0",
    "webpack": "^4.20.2",
    "xo": "^0.23.0"
  },
  "build": {
    "productName": "Archipelago",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 130,
      "contents": [
        {
          "x": 110,
          "y": 200,
          "type": "file"
        },
        {
          "x": 400,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "TerminalEmulator",
      "packageCategory": "TerminalEmulator",
      "description": "Archipelago is a terminal emulator built on open web technologies.",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "maintainer": "Nick Pezza <npezza93@gmail.com>"
    },
    "deb": {
      "synopsis": "Archipelago"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publisherName": "Nick Pezza"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "electronWebpack": {
    "commonSourceDirectory": "app/common",
    "title": true,
    "main": {
      "sourceDirectory": "app/main"
    },
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js",
      "sourceDirectory": "app/renderer"
    }
  }
}
